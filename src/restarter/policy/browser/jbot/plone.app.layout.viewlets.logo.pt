<tal:restarter define="restarter context/@@config_restarter">
<div id="logo-nav-wrapper" tal:condition="restarter/isHomePage">
    <div id="portal-logo">
        <a metal:define-macro="portal_logo"
           title="Home"
           accesskey="1"
           tal:attributes="href view/navigation_root_url;
                           title view/navigation_root_title"
           i18n:domain="plone"
           i18n:attributes="title">
            <img src="logo.jpg" alt=""
                 tal:replace="structure view/logo_tag" /></a>
    </div>
    <div id="navRedBtn" class="bigBtn">
        <ul id="navRed">
            <li id="navBtnProdotti"><a href="#">Prodotti</a></li>
            <li id="navBtnAziende"><a href="" tal:attributes="href string:${here/portal_url}/aziende">Aziende</a></li>
            <li id="navBtnCerco"><a href="#">Cerco / Offro</a></li>
        </ul>
    </div>
    <div class="visualClear"></div>
</div>
<!-- manca classe current -->
<div id="nav-wrapper" tal:condition="not: restarter/isHomePage">
  <div id="navRedBtn" class="barBtn">
      <ul id="navRed">
          <li id="navBtnProdotti"><a href="#">Prodotti</a></li>
          <li id="navBtnAziende"><a href="" tal:attributes="href string:${here/portal_url}/aziende">Aziende</a></li>
          <li id="navBtnCerco"><a href="#">Cerco / Offro</a></li>
      </ul>
  </div>
</div>
</tal:restarter>
