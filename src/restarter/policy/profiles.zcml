<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="restarter.policy">
    

  <!-- Register the installation GenericSetup extension profile -->
  <genericsetup:registerProfile
      name="default"
      title="restartER"
      directory="profiles/default"
      description="Installs the restarter.policy package"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <genericsetup:importStep
      name="restartER-various"
      title="Additional restartER site policy setup"
      description="restartER site policy configuration"
      handler="restarter.policy.setuphandlers.importVarious">
      <depends name="contenttyperegistryp"/>
  </genericsetup:importStep>

  <genericsetup:upgradeStep
      title="Add assoc roles"
      description="Add assoc. roles"
      source="0001"
      destination="0002"
      handler="restarter.policy.upgrades.add_assc_roles"
      sortkey="1"
      profile="restarter.policy:default"/>
  <genericsetup:upgradeStep
      title="Add story ct"
      description="Add story ct"
      source="0002"
      destination="0003"
      handler="restarter.policy.upgrades.add_story_ct"
      sortkey="1"
      profile="restarter.policy:default"/>
  <genericsetup:upgradeStep
      title="Add employee role"
      description="Add employee role"
      source="0003"
      destination="0004"
      handler="restarter.policy.upgrades.add_employee_role"
      sortkey="1"
      profile="restarter.policy:default"/>
  <genericsetup:upgradeStep
      title="Add faceted indexes"
      description=""
      source="0006"
      destination="0007"
      handler="restarter.policy.upgrades.add_faceted_indexes"
      sortkey="1"
      profile="restarter.policy:default"/>

  <genericsetup:registerProfile
      name="upgrade_0004_to_0005"
      title="Upgrade restarter.policy 0004 to 0005"
      directory="profiles/upgrade_0004_to_0005"
      description="Upgrades the restarter.policy 0004 to 0005."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <genericsetup:registerProfile
      name="upgrade_0005_to_0006"
      title="Upgrade restarter.policy 0005 to 0006"
      directory="profiles/upgrade_0005_to_0006"
      description="Upgrades the restarter.policy 0005 to 0006."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

</configure>
